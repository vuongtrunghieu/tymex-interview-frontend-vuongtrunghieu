{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "ignore": [
      "node_modules",
      ".next",
      ".turbo",
      "packages/tsconfig",
      ".trigger",
      ".react-email",
      "coverage"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useSemanticElements": "warn"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "ignore": ["node_modules", ".next", ".turbo", "apps/api"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
